{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["@nuxtjs", "config:recommended", ":dependencyDashboard"],
  "timezone": "Europe/Berlin",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": ["npm"],
      "assignees": ["omgitsjan"],
      "reviewers": ["omgitsjan"],
      "matchUpdateTypes": ["minor", "major", "patch"]
    },
    {
      "description": "Lockfile refresh every 3 months - no PR creation",
      "matchFileNames": ["package-lock.json", "yarn.lock", "pnpm-lock.yaml"],
      "schedule": ["* * 1 */3 *"],
      "recreateWhen": "always",
      "rebaseWhen": "behind-base-branch",
      "platformAutomerge": false,
      "automerge": false,
      "dependencyDashboard": false,
      "prCreation": "not-pending",
      "lockFileMaintenance": {
        "enabled": true,
        "recreateWhen": "always"
      }
    }
  ],
  "schedule": ["before 11am on the first day of the month"],
  "baseBranches": ["main"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["* * 1 */3 *"],
    "recreateWhen": "always",
    "prCreation": "not-pending",
    "automerge": false
  }
}
